<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Doctor: "
                android:id="@+id/tv_doctor_display"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_doctor"
                android:text="Anjali"
                android:layout_toRightOf="@+id/tv_doctor_display"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_doctor_display"
                android:text="Disease: "
                android:id="@+id/tv_disease_display"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_disease_display"
                android:layout_below="@id/tv_doctor"
                android:id="@+id/tv_disease"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_disease_display"
                android:text="Allowed: "
                android:id="@+id/tv_prescription_display"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_prescription_display"
                android:layout_below="@id/tv_disease"
                android:text=""
                android:maxLines="20"
                android:id="@+id/tv_prescription"
                />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>